<h1>Edit {{theMovie.title}}</h1>
<form action="/movies/{{theMovie._id}}/edit" method="POST" >

<label for="">Title</label>
<input type="text" name="title" value="{{theMovie.title}}">

<label for="">genre</label>
<input type="text" name="genre" value="{{theMovie.genre}}">

<label for="">catchPhrase</label>
<input type="text" name="plot" value="{{theMovie.plot}}">

<label for="">Star</label>
<select name="celebrity" >
{{#each allStars}}
{{#if this.yes}}
<option value="{{this._id}}" selected="selected">{{this.name}}</option>
{{else}}
<option value="{{this._id}}">{{this.name}}</option>
{{/if}}
{{/each}}

</select>

<button type="submit">Save changes</button>
</form>